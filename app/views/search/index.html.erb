<h1 class="text-center"><%= pluralize(@books.count, "Result") %></h1>

<div class ="container">
<table class="table table-dark table-striped">
<thead>
<tr>
<th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
<th><%= sort_link(@query, :author, "Author") %></th>
<th><%= sort_link(@query, :discription, "Discription") %></th>
<th><%= sort_link(@query, :user_name, "Users") %></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= link_to book.title, book%></td>
<td><%= book.author.truncate_words(25) %></td>
<td><%= book.discription.to_plain_text.truncate_words(25) %></td>
<td><%= link_to book.user.name, book.user %></td>
</tr>
<% end %>
</tbody>
</table>
</div>