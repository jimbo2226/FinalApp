<% if current_user %>
<p style="color: green"><%= notice %></p>
<div class="container">
<%= render @book %>

<div>
  <%= link_to "Edit this Book", edit_book_path(@book), class: "btn btn-secondary" if current_user.admin? %> |
  <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
<br>
<br>
  <%= button_to "Destroy this Book", @book, method: :delete, class: "btn btn-danger" if current_user.admin? %>
</div>
</div>
<% end %>
